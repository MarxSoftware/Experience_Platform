<Configuration status="ERROR">
	<Appenders>
		<File name="PlatformLog" fileName="logs/experience-platform.log">
			<PatternLayout>
				<Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
			</PatternLayout>
		</File>
	</Appenders>
	<Loggers>
		<Root name="com.thorstenmarx.webtools" level="INFO">
			<AppenderRef ref="PlatformLog"/>
		</Root>
	</Loggers>
</Configuration>
