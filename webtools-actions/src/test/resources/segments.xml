<segments>
	<segment id="id1" name="segment 1">
		<start unit="HOUR" count="2" />
		<rules>
			<rule type="score">
				<name>hit</name>
				<score>50</score>
			</rule>
			<rule type="pageView">
				<site>site</site>
				<page>page</page>
				<count>2</count>
			</rule>
		</rules>
	</segment>
	<segment id="id2" name="segment 2">
		<rules>
			<rule type="event">
				<start unit="DAY" count="30" />
				<site>site</site>
				<event>order</event>
				<count>2</count>
			</rule>
		</rules>
	</segment>
</segments>
